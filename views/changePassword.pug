extends dashboard

block main
  h1=title
  form.pt-5.pb-5(method="POST" action="/changePassword")
    div.form-outline.mb-4
      label.form-label Usuario
      input.form-control.form-control-lg(type="text",placeholder="Ingrese usuario", name="user", value=name) 
    div.form-outline.mb-3
      label.form-label Nueva Contraseña
      input.form-control.form-control-lg(type="password",placeholder="Nueva contraseña", name="newpassword")
    div.text-center.text-lg-start.mt-4.pt-2
      button.btn.btn-primary.btn-lg(type='submit') Guardar
  if error
    div.alert.alert-danger(role='alert') #{error}
  if success
    div.alert.alert-success(role='alert') #{success}